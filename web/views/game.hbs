<div class="container mt-5 text-center">
    <div class="card">
        <div class="card-header">
            <div class="card-title"><h1>{{data.name}}</h1></div>
        </div>
        <div class="card-body">
            {{#if data.image}}
            <img src="{{data.image}}" alt="{{data.name}}" class="game-img">
            <hr>
            {{/if}}
            <p>{{data.description}}</p>
        </div>
        {{#if session.editpower}}
            <div class="card-footer">
                <a href="/game/edit/{{data._id}}" class="btn btn-small btn-warning ml-auto">Edit Game</a>
            </div>
        {{/if}}
    </div>
</div>