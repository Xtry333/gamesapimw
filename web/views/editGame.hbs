<div class="game-edit-form">
    {{#if data._id}}
    <form action="/game/edit/{{data._id}}" method="post">
    {{else}}
    <form action="/game/new/" method="post">
    {{/if}}
        {{#if editing}}
		    <h2>Edit Game</h2>
        {{else}}
		    <h2>Create Game</h2>
        {{/if}}
        <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="Game name" required="true" value="{{data.name}}">
        </div>
        <div class="form-group">
        	<textarea class="form-control" name="description" rows="15">{{data.description}}</textarea>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="image" placeholder="image link" value="{{data.image}}">
        </div>
        <div class="form-group">
            <input type="hidden" class="form-control" name="editing" value="{{data.editing}}">
        </div>  
		<div class="form-group">
            <button type="submit" class="btn btn-success btn-lg btn-block">Save</button>
        </div>
        {{#if editing}}
            <button type="button" data-target="#deleteConfirm" data-toggle="modal" class="btn btn-danger btn-lg btn-block">DELETE GAME</button>
            <div class="modal fade" role="dialog" id="deleteConfirm">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-body">
                            <p>Are you sure you want to delete {{data.name}}?</p>
                        </div>
                        <div class="modal-footer">
                            <a href="/game/delete/{{data._id}}"><button type="button" class="btn btn-success">Yes</button></a>
                            <button type="button" class="btn btn-danger" data-dismiss="modal">No</button>
                        </div>
                    </div>
                </div>
            </div>
        {{/if}}
    </form>
</div>

