<div class="profile-edit-form">
    <form action="/user/editprofile" method="post">
		<h2>Edit Profile</h2>
        <div class="form-group">
            <div class="form-row">
                <div class="col">
                    <input type="text" class="form-control" name="firstname" placeholder="Firstname" value="{{data.user.firstname}}">
                </div>
                <div class="col">
                    <input type="text" class="form-control" name="lastname" placeholder="Lastname" value="{{data.user.lastname}}">
                </div>
            </div>
        </div>
        <div class="form-group">
        	<input type="email" class="form-control" name="email" placeholder="you@example.com" required="required" value="{{data.user.email}}">
        </div>
        <div class="form-group">
            <select class="custom-select my-1 mr-sm-2" name="gender" id="genderSelect">
                <option selected>Gender...</option>
                <option value="Female">Female</option>
                <option value="Male">Male</option>
            </select>
            <script>
                genderSelect.value = '{{data.user.gender}}';
            </script>
        </div>
		<div class="form-group">
            <button type="submit" class="btn btn-success btn-lg btn-block">Save</button>
        </div>
    </form>
</div>